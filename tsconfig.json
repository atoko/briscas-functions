{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "$server/*": ["_core/server/*"],
      "$accounts/*": ["_core/accounts/*"],
      "$briscas/*": ["_core/briscas/*"]
    },
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.mock.ts"    
  ]
}
